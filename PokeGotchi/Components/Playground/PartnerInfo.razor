@using PokeGotchi.Models
@using PokeGotchi.Components.Playground.PartnerInfoComps
@using PokeGotchi.Models.Enums

<div id="playground-partner-info">
    
    <PartnerCurrentState PartnerPokemon="@PartnerPokemon" />

    <PartnerMood PartnerPokemon="@PartnerPokemon" />
    
    <ShopComp Shop="@Shop" Player="@Player" OnSaveAndRefresh="@OnSaveAndRefresh"/>

    <InventoryComp Player="@Player" OnSaveAndRefresh="@OnSaveAndRefresh" />

    <PartnerStats PartnerPokemon="@PartnerPokemon" />

    <PartnerExperience ExperienceValue="@PartnerPokemon.Stats[Stats.Experience]" />
</div>

@code {
    [Parameter] public Partner PartnerPokemon { get; set; }
    [Parameter] public Player Player { get; set; }
    [Parameter] public EventCallback OnSaveAndRefresh { get; set; }
    private Shop Shop { get; set; } = new Shop();

}